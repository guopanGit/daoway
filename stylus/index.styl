#header
  width 100%
  min-width 1251px
  border-bottom 1px solid #e5e5e5
  background-color #ffffff
  opacity 0.9
  position fixed
  top 0
  left 0
  right 0
  z-index 100
  .header-nav
    width 85%
    height 70px
    margin 0 auto
    display flex
    justify-content space-between
    align-items center
    font 16px latoregular, Verdana, sans-serif
  .right
    width 70%
    display flex
    justify-content space-between
    & ul li:last-child a
      text-align center
      display inline-block
      border-radius 10px
      width 76px
      height 28px
      background-color red
      color white
      padding-top 5px
    >a :nth-child(3)
      color red
    .nav-left
      color #000
      >span
        font-weight bold
        font-style normal
    .nav-right
      white-space nowrap
      >li
        display inline-block
        margin 0 10px
        >a
          color black
          font-weight bold
.Swiper-warp
  position relative
  top 71px
 & .swiper-container
    .swiper-wrapper
      .swiper-slide
        >img
          position relative
          left -300px
  .Menu-wrap
    width 180px
    height 419px
    background-color #60646D
    position absolute
    top 0
    left 8%
    text-align center
    z-index 5
    .Menu>li
      color white
      padding-top 20px
      height 20px
      & a
        color white
        position relative
        & .right1
            position absolute
            top 8px
            right 3px
        & .icon1
            position absolute
            top 8px
            right -40px
            display none
        & span
          display inline-block
          margin-right 20px
    .two-menu
      width 180px
      height 426px
      opacity .8
      display none
      background-color #ffffff
      position relative
      left 100%
      top -41px
      &>li
        padding-top  20px
        & a
          font-weight 500
          color black
.navigation-wrap
  position relative
  top 490px
.navigation
  width 100%
  height 516px
  text-align center
  position relative
  top -421px
  background-color white
  & .wrap-top
    height 71px
    & h1
      font-weight bold
      font-size 28px
      padding 50px 0 20px 0
    & span
      display block
      min-width 1000px
      & a
        color #3d3838
        font-size 26px
  & .lookMore a
    position relative
    top -25px
    right -550px
  & .ServiceBorder
    display flex
    justify-content space-around
    & a
      text-align left
      border 1px solid #eaeaea
      padding 10px
      margin 80px 0

      line-height 20px
      & h3
        font-size 20px
        font-weight bold
        color black
        margin 5px 0
      & p
        margin-bottom 10px
        color #929292
        font-size 14px
      & img
        width 210px
        height 210px
      & div
        font-size 14px
        color red
        & span:nth-child(1)
          font-size 20px
        & span:nth-child(2)
          text-align center
          float right
          width 76px
          height 24px
          background-color #fb474f
          color white
          border-radius 5px
          line-height 22px


