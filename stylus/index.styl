body
  background-color white
  height 1000px
  #header
    width 100%
    min-width 1000px
    border-bottom 1px solid #e5e5e5
    background-color white
    opacity 0.7
    position fixed
    top 0
    left 0
    right 0
    z-index 100
    .header-nav
      width 85%
      height 70px
      margin 0 auto
      display flex
      justify-content space-between
      align-items center
      font 16px latoregular, Verdana, sans-serif
    .right
      width 70%
      display flex
      justify-content space-between
      & ul li:last-child a
        text-align center
        display inline-block
        border-radius 10px
        width 76px
        height 28px
        background-color red
        color white
        padding-top 5px
      >a :nth-child(3)
        color red
      .nav-left
        color #000
        >span
          font-weight bold
          font-style normal
      .nav-right
        white-space nowrap
        >li
          display inline-block
          margin 0 10px
          >a
            color black
            font-weight bold
  .wrap
    margin-top 71px
    height 420px
    >ul
      position relative
      left -300px
      >li
        position absolute
        transition opacity 2s